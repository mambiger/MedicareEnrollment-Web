@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MedicareLayout.cshtml";

}



<div class="main-content" data-ng-app="MedicareEnrollmentModule" ng-controller="LoginController">
    <div class="container">
        <div class="caption-heading">
            <div class="caption-h">
                Login
            </div>
        </div>
    </div>
    <div class="container" style="margin-top: 30px; margin-bottom: 30px;">
        <div class="col-md-12 col-sm-12">
            <form class="form-horizontal" role="form">
                <div class="form-group required">
                    <label for="Email" class="col-sm-5 control-label">Email:</label>
                    <div class="col-sm-3">
                        <input type="text" id="Email" ng-model="username" class="form-control">
                    </div>
                    <div class="col-sm-4"></div>
                </div>
                <div class="form-group required">
                    <label for="Password" class="col-sm-5 control-label">Password:</label>
                    <div class="col-sm-3">
                        <input type="password" ng-model="Password" id="Password" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-5" style="text-align:right">
                        <input type="checkbox" id="chkpwd">
                        <label class="control-label">Remember me?</label>
                    </div>
                    <div class="col-md-5">
                        <button type="button" class="btn btn-default" ng-click="getuser()">Login</button>
                        <a type="button" class="btn btn-default" href="~/Enrollment/Register">Register</a>
                    </div>
                    <div class="col-md-5">
                       
                    </div>
                    <div class="col-sm-1"></div>
                </div>
            </form>
        </div>
    </div>

</div>

<script src="~/Scripts/Scripts/Login/LoginControllerV1.js"></script>
<script src="~/Scripts/Scripts/Login/LoginServiceV1.js"></script>
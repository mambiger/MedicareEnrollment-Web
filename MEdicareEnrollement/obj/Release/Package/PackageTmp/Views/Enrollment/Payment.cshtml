            <a href="~/Enrollment/OSB" class="btn btn-default">Previous</a>
            <a ng-click="InsertPaymentInfo('Next')" class="btn btn-default">Next</a>
            <button type="button" class="btn btn-primary" ng-click="InsertPaymentInfo('Save')">Save</button>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div style="clear: both"></div>
</div>
<script>
    $('#r11').on('click', function () {
        $(this).parent().find('a').trigger('click')
    })

    $('#r12').on('click', function () {
        $(this).parent().find('a').trigger('click')
    })
